---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggleButton from './ThemeToggleButton.svelte';
const { current = '' } = Astro.props;

---

<header>
	<nav>
		<div class="left-group">
			<button class="hamburger" id="hamburger-button" aria-label="Toggle menu">
				☰
			</button>
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<div class="internal-links" id="navLinks">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>

		</div>
		<div class="right-group">
			<div class="social-links">
				<a href="https://github.com/leeCS-404" target="_blank">
					<span class="sr-only">Go to my GitHub</span>
					<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32">
						<path
							fill="currentColor"
							d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
						></path>
					</svg>
				</a>
			</div>
			<div class="theme-toggle-container">
				<ThemeToggleButton client:load />
			</div>
		</div>
	</nav>
</header>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const button = document.getElementById('hamburger-button');
		const navLinks = document.getElementById('navLinks'); // ✅ corrected ID

		if (button && navLinks) {
			button.addEventListener('click', () => {
				navLinks.classList.toggle('open');
			});
		}
	});
</script>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: var(--background-body);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background var(--transition-speed), box-shadow var(--transition-speed);
	}

	:global(.theme-dark) header {
  		background: #18191a;
  		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.6);
	}


	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		transition: color var(--transition-speed);
	}

	/* group title + links together */
	.left-group {
		display: flex;
		align-items: center;
		gap: 1em; /* space between title and links */
	}

	.right-group {
		display: flex;
		align-items: center;
		gap: 1em; /* space between social links and theme toggle */
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-main);
 		transition: color var(--transition-speed), text-shadow var(--transition-speed);
	}

	h2 a:hover {
		color: var(--accent);
		text-shadow: var(--glow);
	}

	.internal-links {
		display: flex;
		gap: 1em;
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--text-main);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color var(--transition-speed), border-color var(--transition-speed), text-shadow var(--transition-speed);

	}

	nav a.active {
  		border-bottom-color: var(--accent);
	}


	nav a:hover {
		color: var(--accent);
		border-bottom-color: var(--accent);
		text-shadow: var(--glow);
	}


	.theme-toggle-container {
    	width: 75px;
	}

	@media screen and (max-width: 520px) {
		.theme-toggle-container {
			margin-right: 1em;
		}
	}
	.social-links,
	.social-links a {
		display: flex;
		color: var(--text-main);
  		transition: color var(--transition-speed), filter var(--transition-speed);
	}

	.social-links a:hover {
		color: var(--accent);
		filter: drop-shadow(var(--glow));
	}

	.hamburger {
		display: none;
		background: none;
		border: none;
		font-size: 1.5em;
		cursor: pointer;
		color: var(--text-main);
	}

	.internal-links.open {
		display: flex;
		gap: 1em;
	}

	@media (max-width: 720px) {
		.hamburger {
			display: block;
			background: none;
			border: none;
			font-size: 1.5em;
			cursor: pointer;
			color: var(--text-main);
		}

		.internal-links {
			display: none;
			flex-direction: column;
			position: absolute;
			top: 60px;
			left: 0;
			width: 100%;
			background: var(--background-body);
			box-shadow: 0 2px 8px rgba(var(--black), 0.1);
			padding: 1em;
		}

		.internal-links.open {
			display: flex;
		}
	}


</style>
