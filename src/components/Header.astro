---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import ThemeToggleButton from './ThemeToggleButton.svelte';
const { current = '' } = Astro.props;

---

<header>
	<nav>
		<div class="left-group">
			<button class="hamburger" id="hamburger-button" aria-label="Toggle menu">
				☰
			</button>
			<h2><a href="/">{SITE_TITLE}</a></h2>
			<div class="internal-links" id="navLinks">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/work">Work</HeaderLink>
                <HeaderLink href="/resources">Resources</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
			</div>

		</div>
		<div class="right-group">
			<div class="social-links">
			</div>
			<div class="theme-toggle-container">
				<ThemeToggleButton client:load />
			</div>
		</div>
	</nav>
</header>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const button = document.getElementById('hamburger-button');
		const navLinks = document.getElementById('navLinks'); // ✅ corrected ID

		if (button && navLinks) {
			button.addEventListener('click', () => {
				navLinks.classList.toggle('open');
			});

			navLinks.querySelectorAll('a').forEach(link => {
				link.addEventListener('click', () => {
					navLinks.classList.remove('open');
				});
			});

		}
	});
</script>

<style>
	header {
		margin: 0;
		padding: 0 0.3em;
		background: var(--background-body);
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		transition: background var(--transition-speed), box-shadow var(--transition-speed);
		position: sticky;
		top: 0;
		z-index: 50;
	}

	:global(.theme-dark) header {
  		background: #18191a;
  		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.6);
	}


	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		transition: color var(--transition-speed);
	}

	/* group title + links together */
	.left-group {
		display: flex;
		align-items: center;
		gap: 1em; /* space between title and links */
	}

	.right-group {
		display: flex;
		align-items: center;
		gap: 1em; /* space between social links and theme toggle */
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--text-main);
 		transition: color var(--transition-speed), text-shadow var(--transition-speed);
	}

	h2 a:hover {
		color: var(--accent);
		text-shadow: var(--glow);
	}

	.internal-links {
		display: flex;
		gap: 1em;
	}

	nav a {
		padding: 1em 0.5em;
		color: var(--text-main);
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: color var(--transition-speed), border-color var(--transition-speed), text-shadow var(--transition-speed);

	}

	nav a.active {
  		border-bottom-color: var(--accent);
	}


	nav a:hover {
		color: var(--accent);
		border-bottom-color: var(--accent);
		text-shadow: var(--glow);
	}


	.theme-toggle-container {
    	width: 75px;
	}

	@media screen and (max-width: 520px) {
		.theme-toggle-container {
			margin-right: 1em;
		}


		h1, h2, h3, h4, h5, h6 {
			font-size: 0.85em;
		}

		p{
			font-size: 0.9em;
		}
	}
	.social-links,
	.social-links a {
		display: flex;
		color: var(--text-main);
  		transition: color var(--transition-speed), filter var(--transition-speed);
	}

	.social-links a:hover {
		color: var(--accent);
		filter: drop-shadow(var(--glow));
	}

	.hamburger {
		display: none;
		background: none;
		border: none;
		font-size: 1.5em;
		cursor: pointer;
		color: var(--text-main);
	}

	.internal-links.open {
		display: flex;
		gap: 1em;
	}

	@media (max-width: 720px) {
		.hamburger {
			display: block;
			background: none;
			border: none;
			font-size: 1.5em;
			cursor: pointer;
			color: var(--text-main);
		}

		.internal-links {
			display: none;
			flex-direction: column;
			position: absolute;
			top: 60px;
			left: 0;
			width: 100%;
			background: var(--background-body);
			box-shadow: 0 2px 8px rgba(var(--black), 0.1);
			padding: 1em 2em;
			box-sizing: border-box;
		}

		.internal-links.open {
			display: flex;
		}

		h1, h2, h3, h4, h5, h6 {
			font-size: 0.85em;
		}

		p{
			font-size: 0.9em;
		}
	}


</style>